<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F3FF">

    <TextView
        android:id="@+id/tvEnergy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="energy"
        android:textColor="#6B3A2E"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/barEnergy"
        android:layout_width="120dp"
        android:layout_height="10dp"
        android:background="#9AD24D"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/tvEnergy"
        app:layout_constraintTop_toBottomOf="@id/tvEnergy" />

    <TextView
        android:id="@+id/tvHunger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hunger"
        android:textColor="#6B3A2E"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/tvEnergy"
        app:layout_constraintTop_toBottomOf="@id/barEnergy" />

    <View
        android:id="@+id/barHunger"
        android:layout_width="120dp"
        android:layout_height="10dp"
        android:background="#E48F47"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/tvHunger"
        app:layout_constraintTop_toBottomOf="@id/tvHunger" />

    <TextView
        android:id="@+id/tvFriendship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="friendship"
        android:textColor="#6B3A2E"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/tvHunger"
        app:layout_constraintTop_toBottomOf="@id/barHunger" />

    <View
        android:id="@+id/barFriendship"
        android:layout_width="120dp"
        android:layout_height="10dp"
        android:background="#F4F665"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/tvFriendship"
        app:layout_constraintTop_toBottomOf="@id/tvFriendship" />


    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/bg_square_light"
        android:contentDescription="settings"
        app:srcCompat="@drawable/ic_gear"
        app:tint="#000000"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnJournal"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_square_light"
        android:contentDescription="journal"
        app:srcCompat="@drawable/ic_book"
        app:tint="#000000"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSettings" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/petOvalTopGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <View
        android:id="@+id/ground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#394C3F"
        app:layout_constraintTop_toBottomOf="@id/petOvalTopGuide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:id="@+id/ivPetOval"
        android:layout_width="260dp"
        android:layout_height="360dp"
        android:background="@drawable/bg_oval_light"
        android:scaleType="centerInside"
        android:layout_marginBottom="-60dp"
        app:layout_constraintBottom_toTopOf="@id/ground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFeed"
        android:layout_width="220dp"
        android:layout_height="44dp"
        android:text="feed"
        android:textColor="#000000"
        app:backgroundTint="#E69758"
        app:cornerRadius="6dp"
        app:layout_constraintTop_toTopOf="@id/ground"
        app:layout_constraintBottom_toTopOf="@id/btnSleep"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintVertical_chainStyle="spread" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSleep"
        android:layout_width="220dp"
        android:layout_height="44dp"
        android:text="sleepy time!"
        android:textColor="#000000"
        app:backgroundTint="#E69758"
        app:cornerRadius="6dp"
        app:layout_constraintTop_toBottomOf="@id/btnFeed"
        app:layout_constraintBottom_toTopOf="@id/btnChat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnChat"
        android:layout_width="220dp"
        android:layout_height="44dp"
        android:text="I want to chat!"
        android:textColor="#000000"
        app:backgroundTint="#E69758"
        app:cornerRadius="6dp"
        app:layout_constraintTop_toBottomOf="@id/btnSleep"
        app:layout_constraintBottom_toBottomOf="@id/ground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
